<div style="margin: 0 auto; width: 50%">
    <h1>Name Lookup</h1>
    <form method="POST">
        <label for="last_name">Enter last name:</label>
        <input id="last_name" name="last_name" type="text">
        <button type="submit">Search</button>
    </form>
    <% if @error %><%= @error %><% end %>
    <% if @names %>
        <ul>
        <% @names.each do |name| %>
            <li>
            <%= name.first %>
            <%= name.last %>
            </li>
        <% end %>
        </ul>
    <% end %>
</div>